<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/x176"
        android:orientation="vertical"
        android:background="@drawable/shape_pro_bg">
    <TextView
        android:id="@+id/dialog_tv_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="拍照"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textSize="@dimen/x36"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/gray_photo_dialog_line"/>
    <TextView
        android:id="@+id/dialog_tv_album"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="相册"
        android:gravity="center"
        android:textSize="@dimen/x36"
        android:includeFontPadding="false"/>
    </LinearLayout>
</LinearLayout>