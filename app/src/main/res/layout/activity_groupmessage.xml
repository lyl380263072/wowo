<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/group_tv_new"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x110"
            android:drawableLeft="@mipmap/addpeople"
            android:padding="@dimen/x24"
            android:gravity="center_vertical"
            android:textSize="@dimen/x32"
            android:drawablePadding="@dimen/x24"
            android:textColor="@color/text_black"
            android:text="@string/new_group" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x24"
            android:background="@color/line_gray"/>
        <TextView
            android:id="@+id/group_tv_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x110"
            android:drawableLeft="@mipmap/addressbook"
            android:drawablePadding="@dimen/x24"
            android:padding="@dimen/x24"
            android:gravity="center_vertical"
            android:textSize="@dimen/x32"
            android:textColor="@color/text_black"
            android:text="@string/my_group" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x24"
            android:background="@color/line_gray"/>
    </LinearLayout>

</LinearLayout>