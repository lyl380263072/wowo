<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="@dimen/x560"
        android:layout_height="@dimen/x240"
        android:orientation="vertical"
        android:background="@drawable/backround_white"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/dialog_delete_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:textSize="@dimen/x22"
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/dialog_delete_tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginLeft="@dimen/x25"
            android:layout_marginRight="@dimen/x25"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/x30"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="@dimen/x24"
            android:layout_height="@dimen/x48">
            <TextView
                android:id="@+id/dialog_delete_tv_cancel"
                android:layout_width="@dimen/x160"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="@dimen/x22"
                android:includeFontPadding="false"
                android:background="@drawable/backround_bt_maincolor"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="@dimen/x14"
                android:text="@string/cancel"/>
            <TextView
                android:id="@+id/dialog_delete_tv_sure"
                android:layout_width="@dimen/x160"
                android:layout_height="match_parent"
                android:textSize="@dimen/x22"
                android:layout_marginLeft="@dimen/x14"
                android:includeFontPadding="false"
                android:textColor="@color/text_black"
                android:background="@drawable/backround_bt_gary"
                android:gravity="center"
                android:text="@string/sure"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>